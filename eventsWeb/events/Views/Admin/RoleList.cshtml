@model IEnumerable<IdentityRole>
    

<h1>Role List</h1>
<hr>
<a href="/admin/RoleCreate" class="btn btn-success btn-sm">Create Role</a>
<br><br>
<table class="table table-bordered">  
    <thead>
        <tr>
            <td>ID</td>
            <td>Role Name</td>
            <td>Name</td>


        </tr>
        <tbody>
           @if(Model.Count()>0) 
           {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>
                            <a href="/admin/RoleEdit/@item.Id" class="btn btn-primary btn-sm mr-2">Edit</a>
                            <form action="/admin/RoleDelete" method="POST" style="display: inline;">
                                <input type="hidden" name="RoleId" value="@item.Id">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>                
                } 
           }
           else
           {
                <div class="alert alert-warning">
                    <h3>No Roles</h3>    
                </div>
           }

  
        </tbody>
    </thead>
</table>



