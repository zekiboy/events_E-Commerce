   @model events.Models.ProductListViewModel
    <div class="row">
        <div class="col-md-2">
            @await Component.InvokeAsync("Categories")
        </div>
         <div class="col-md-10">
            <div class="row">
                @foreach (var product in Model.Products)
                {
                    <div class="col-md-3">
                        @await Html.PartialAsync("~/Views/Shared/_productCard.cshtml", product)
                    </div>
                }
            </div>
         </div>
    </div>